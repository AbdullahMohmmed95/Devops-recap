pipeline {
    agent any

    stages {
        stage('Git Push Trigger') {
            steps {
                script {
                    echo 'hi DevOps'
                }
            }
        }
    }

    triggers {
        // Triggering the pipeline when there is a Git push
        pollSCM('*/1 * * * *') // polling SCM every 5 minutes, change it as per your requirement
    }
}
