pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout source code from version control
                git 'https://github.com/AbdullahMohmmed95/Devops-recap-1.git'
            }
        }
        
        stage('Build') {
            steps {
                // Build the Maven project
                sh 'mvn clean package'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests using Maven
                sh 'mvn test'
            }
            post {
                // Publish JUnit test results
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
    }
    
    // Post-build actions
    post {
        success {
            // Notify on successful build
            slackSend channel: '#your_slack_channel', color: 'good', message: "Build successful!"
        }
        failure {
            // Notify on build failure
            slackSend channel: '#your_slack_channel', color: 'danger', message: "Build failed!"
        }
    }
}
