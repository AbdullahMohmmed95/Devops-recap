pipeline {
    agent any

    stages {
        stage('Git Push Trigger') {
            steps {
                script {
                    echo 'hi DevOps'
                }
            }
        }
    }

    triggers {
        // Triggering the pipeline when a webhook from Git push event is received
        genericWebhook(
            genericVariables: [
                [$class: 'GenericVariable', key: 'GIT_PUSH', value: 'true']
            ]
        )
    }
}
