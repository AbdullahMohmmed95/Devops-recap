pipeline {
    agent any


   triggers {
         pollSCM('*/5 * * * *')
    }
    stages {
        stage ('Print') {
            steps {
                echo "Hello Devops Engineers"
            }
        }
    }
    post {
        always { 
            echo 'I will always say Hello again!'
        }
        success {
            echo 'I ppppp'
        }
        failure {
            echo 'iiii'
        }
    }
}